/*
 * Base configuration - Common settings for all profiles
 */

// Enable report overwriting
// Note: Reports are generated in the launch directory by default
// Override with -with-report, -with-timeline, -with-trace if needed
report {
    enabled = true
    overwrite = true
}

timeline {
    enabled = true
    overwrite = true
}

trace {
    enabled = true
    overwrite = true
}

dag {
    enabled = false
    overwrite = true
}

// Process defaults
process {
    errorStrategy = 'retry'
    maxRetries = 2
}

// Pipeline manifest for metadata
manifest {
    name = 'long-gwas-pipeline'
    description = 'Nextflow pipeline for longitudinal, survival, and cross-sectional GWAS'
    mainScript = 'main.nf'
    defaultBranch = 'main'
    nextflowVersion = '>=21.04.0'
}
