/*
 * Local profile without containers - for testing on local machines with Python environment
 * Not recommended as you need to install all dependencies manually.
 */

env {
    RESOURCE_DIR = "${params.reference_dir}"
    ANALYSES_DIR = "${params.project_dir}/analyses"
    GENOTYPES_DIR = "${params.project_dir}/genotypes"
}

workDir = "${params.project_dir}/work"

process {
    executor = 'local'
    
    withLabel: small {
        cpus = 2
        memory = '6 GB'
        time = '2h'
    }
    
    withLabel: medium {
        cpus = 2
        memory = '4 GB'
        time = '2h'
    }
    
    withLabel: large {
        cpus = 2
        memory = '4 GB'
        time = '4h'
    }
    
    withLabel: very_large {
        cpus = 4
        memory = '8 GB'
        time = '6h'
    }

    withLabel: two_cpu_large_mem {
        cpus = 2
        memory = '8 GB'
        time = '2h'
    }
}

docker {
    enabled = false
}

singularity {
    enabled = false
}
